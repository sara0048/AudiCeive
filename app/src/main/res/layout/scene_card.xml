<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scene_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scene_image"
            android:layout_below="@id/scene_name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scene_address"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/scene_image"
            android:textSize="19sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scene_details"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/scene_address"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scene_link"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/scene_details"
            android:text="LINK"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scene_images"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/scene_link"
            android:text="IMAGES"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scene_videos"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/scene_images"
            android:text="VIDEOS"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scene_remove"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/scene_videos"
            android:text="REMOVE"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>